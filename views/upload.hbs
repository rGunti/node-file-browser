<form id="uploaderForm">
    <div class="row file-field input-field">
        <div class="col s12">
            <div class="btn">
                <span>Select File</span>
                <input type="file" id="uploadFile" name="uploadFile">
            </div>
            <div class="file-path-wrapper">
                <input class="file-path validate" type="text">
            </div>
        </div>
    </div>
    <div class="row input-field">
        <div class="col s12 right-align">
            <button type="submit" class="btn indigo">
                Upload
            </button>
        </div>
    </div>
    <div class="row">
        <div class="col s10 left-align">
            <span class="upload-progress-state">Ready</span>
        </div>
        <div class="col s2 right-align">
            <span class="upload-progress-percentage">0</span>%
        </div>
        <div class="col s12 progress indigo lighten-5">
            <div class="determinate indigo" style="width: 0%"></div>
            <div class="indeterminate indigo"></div>
        </div>
        <div class="col s12 right-align">
            <button type="button" id="cancelButton" class="btn red" disabled>
                Cancel
            </button>
        </div>
    </div>
</form>

<script src="/public/js/upload.js"></script>
